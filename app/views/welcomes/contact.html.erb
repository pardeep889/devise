
<div class="jumbotron">
<%= form_for @mail, url: "/create_contact" do |f| %>
<div class="form-group">  
    <%= f.label :email %><br> 
    <%= f.text_field :email ,class: "form-control", placeholder: "Enter Your Email...." %> <br>  
    <%= f.label :subject%><br> 
    <%= f.text_field :subject,class: "form-control", placeholder: "Write Subject Here...." %><br>
    <%= f.label :message%><br>
    <%= f.text_area :message,class: "form-control",style: "min-width: 100%; min-height: 200px", placeholder: "Write Your Message Here....." %>
    <br>
    <%= f.submit "Send Message", class: "btn btn-danger" %>
<% end %>
</div>
</div>
<br>
  
